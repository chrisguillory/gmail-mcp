# Gmail MCP Server Configuration
# Copy this file to .env and update with your values

# Gmail OAuth configuration paths (relative to repository root)
MCP_GMAIL_CREDENTIALS_PATH=./credentials.json
MCP_GMAIL_TOKEN_PATH=./token.json

# Gmail API settings
MCP_GMAIL_USER_ID=me
MCP_GMAIL_MAX_RESULTS=10

# Optional: Set log level for debugging (uncomment to enable)
# MCP_GMAIL_LOG_LEVEL=debug
